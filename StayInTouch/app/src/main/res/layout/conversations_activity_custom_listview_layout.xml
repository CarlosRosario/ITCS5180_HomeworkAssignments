<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/unknownprofilepic"
        android:id="@+id/conversationsActivityProfileImageView"
        android:layout_weight=".1"
         />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/conversationsActivityFullNameTextView"
        android:layout_marginTop="10dp"
        android:paddingLeft="3dp"
        android:text="First Name Last Name"
        android:layout_weight=".7"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/redbubble"
        android:id="@+id/conversationsActivityRedBubbleImageView"
        android:layout_weight=".1"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="10dp"
        android:id="@+id/conversationsActivityPhoneIconImageView"
        android:layout_weight=".1"
        />

</LinearLayout>